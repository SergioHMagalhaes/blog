<%- include('../../partials/head.ejs') %> 
<%- include('../../partials/navbarHome.ejs') %>
<body>

    <div class="container">
        <div class="row row-cols-xxl-3 row-cols-xl-2 row-cols-xs-1">
            <% result.articles.rows.forEach(article => {%> 

                <div class="col">
                    <a class="text-light decoration-none" href="/<%= article.slug %> ">
                        <div class="card card-home">
                            <img class="card-img-top" src="/img/banner-padrao.svg" alt="Futuristic HUD illustration">
                            <div class="card-body">
                                <span> <%= article.category.title %> </span>
                                <h5 class="card-title"> <%= article.title %> </h5>
                            </div>
                        </div>
                    </a>
                </div>

            <% }) %> 
        </div>
        <nav aria-label="Navegação de página exemplo">
            <div class="center">
                <ul class="pagination">
                    <% if(result.page > 2){ %> 
                        <li class="page-item"><a class="page-link" href="/articles/page/<%= result.page +1 %>">Anterior</a></li>

                    <% }else if(result.page == 2){ %>    
                        <li class="page-item"><a class="page-link" href="/">Anterior</a></li>
                    <% } %> 
                  
                  <li class="page-item"><span class="page-link"> <%= result.page %> </span> </li>
                    <% if(result.next){ %> 
                        <li class="page-item"><a class="page-link" href="/articles/page/<%= result.page +1 %> ">Próximo</a></li>
                    <% }else{ %>    
                        <li class="page-item disabled"><a class="page-link" href="">Próximo</a></li>
                    <% } %> 
                  
                </ul>
            </div>
          </nav>
    </div>

</body>

<%- include('../../partials/footer.ejs') %> 